@{
    ViewData["Title"] = "Lista de Peliculas";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-8">
            <h2 class="text-primary">
                <i class="fas fa-list-alt"></i> Lista de Peliculas
            </h2>
        </div>
        <div class="col-4 text-end">
            <a asp-action="Create" class="btn btn-success text-white">
                <i class="fas fa-plus"></i> Crear nueva Pelicula
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table id="tblPeliculas" class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Clasificacion</th>
                    <th scope="col">Duracion</th>
                    <th scope="col">Fecha Creacion</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Aqui iran las filas por datatables -->
            </tbody>
        </table>
    </div>
</div>

 @section Scripts {
     <script src="~/js/pelicula.js">

     </script>
 }